/* 搜索 */
.search {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    color: #999;
    background: #f9f9f9;
    border-radius: 50rpx;
}

.search image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
}

.searchWrap {
    position:fixed;
    left: 0;
    top: 0;
    width: 100%;
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    height: 100rpx;
}

.searchWrap .searchInput {
    height: 66rpx;
    background: #f7f7f7;
    flex: 1;
    display: flex;
    justify-items: center;
    align-items: center;
    padding: 0 30rpx;
    border-radius: 33rpx;
}

.searchWrap .searchInput input {
    font-size: 28rpx;
    flex: 1;
}

.searchWrap .searchInput input.input-placeholder {
    color: #999;
    font-size: 28rpx;
}

.searchWrap .searchInput .serchIcon {
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
}

.searchWrap .searchInput .clearIcon {
    display: none;
    width: 28rpx;
    height: 28rpx;
}
.searchWrap.focus .searchInput .clearIcon{
    display: block;
}

.searchWrap .searchCancelButton {
    display: none;
    margin-left: 30rpx;
    height: 66rpx;
    line-height: 66rpx;
    border: 1px solid #666;
    color: #666;
    font-size: 28rpx;
    padding: 0 30rpx;
    border-radius: 33rpx;
}
.searchWrap.focus .searchCancelButton{
    display: block;
}

/* 书单列表 */

.bookListWrap {

    background: #f8f8f8;
    padding-top: 135rpx;
}

.bookListWrap .bookListTitle {
    display: flex;
    justify-content: center;
    align-items: center;
}

.bookListWrap .bookListTitle image {
    width: 107rpx;
    height: 34rpx;
}

.bookListWrap .bookList {
    padding-top: 22rpx;
    padding-right: 90rpx;
    padding-left: 90rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.bookListWrap .bookList>view {
    width: 240rpx;
    border-radius: 10rpx;
    background: #fff;
    overflow: hidden;
    margin-bottom:58rpx;
}

.bookListWrap .bookList>view image {
    width: 240rpx;
    height: 220rpx;
}

.bookListWrap .bookList>view .content {
    display: flex;
    flex-direction: column;
    padding: 10rpx 20rpx;
    min-height: 138rpx;
}

.bookListWrap .bookList>view .content>text:nth-of-type(1) {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    font-size: 24rpx;
    color: #333;
}

.bookListWrap .bookList>view .content>text:nth-of-type(2) {
    font-size: 20rpx;
    color: #999;
}

.bookListWrap .bookList>view .content>view:nth-of-type(1) {
    padding-top:20rpx;
    align-self: flex-end;
    font-size: 18rpx;
    color: #bbb;
}

/* 搜索记录 */
.searchBox{
    display: none;
    position:absolute;
    left: 0;
    top:100rpx;
    right:0;
    background: #fff;
}
.searchBox.focus{
    display: block;
}
.searchListWrap {
    padding-left: 30rpx;
    padding-right: 30rpx;
    margin-bottom: 100rpx;
}

.searchListWrap>view:nth-of-type(1) {
    border-left: 8rpx solid #333;
    font-size: 28rpx;
    color: #333;
    padding-left: 20rpx;
    line-height: 28rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.searchListWrap>view:nth-of-type(2) {
    display: flex;
    flex-wrap: wrap;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.searchListWrap>view:nth-of-type(2) text {
    font-size: 28rpx;
    color: #666;
    line-height: 40rpx;
    padding: 5rpx 20rpx;
    margin: 10rpx;
    background: #f7f7f7;
}

/* 搜索结果 */

.searchResultWrap {
    display: none;
    position: absolute;
    left: 0;
    right: 0;
    top: 100rpx;
    bottom: 0;
    background: #fff;
    overflow-y: scroll;
}

.searchResult {
    display: flex;
    align-items: center;
    margin: 0 30rpx;
    padding: 20rpx 0;
    border-bottom: 1px solid #eee;
}

.searchResult> image {
    width: 60rpx;
    height: 80rpx;
    flex-shrink: 1;
    margin-right: 20rpx;
}

.searchResult> .news {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.searchResult> .news text:nth-child(1) {
    font-size: 28rpx;
    color: #333;
}

.searchResult> .news text:nth-child(2) {
    font-size: 20rpx;
    color: #999;
}
